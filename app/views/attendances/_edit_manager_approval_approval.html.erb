<% provide(:title, "Manager approval") %>
<% provide(:class_text, 'manager-approval') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= form_with(model: @attendancesd, url: attendances_manager_approval_approval_user_path(current_user.id, date: @first_day.to_date), local: true, method: :patch)  do |f| %>
      <% for n in 0..(@user_id_number_d-1) do %>
        <% i = @count_max_sum_d[n] %>
        <% user = User.find(@attendancesd[i].user_id) %>
        <div class="modal-header">
          <h3 class="modal-title title-center">【<%= user.name %>からの1ヵ月分勤怠申請】</h3>
        </div>
        <div class="modal-body">
          <div>
            <table class="table table-bordered table-striped table-condensed table-hover" style="table-layout:fixed" id="table-attendances">
              <thead>
                <colgroup>
                  <col style='width:40px;'>
                  <col style='width:120px;'>
                  <col style='width:40px;'>
                  <col style='width:140px;'>
                </colgroup>
                <tr>
                  <th>月</th>
                  <th>指示者確認〇</th>
                  <th>変更</th>
                  <th>勤怠を確認する</th>
                </tr>
              </thead>
              <tbody>
                <!-- m in 0..@count_max_d[n]-1 do -->
                  <%= f.hidden_field :user_id, multiple: true, :value => user.id %>
                  <% i = @count_max_sum_d[n] %>
                    <%= f.hidden_field :id, multiple: true, :value => @attendancesd[i].id %> <!-- attendancesbテーブルのidを渡す -->
                    <%= f.hidden_field :date, :value => @first_day %>
                    <tr>
                      <td>
                        <%= l(@attendancesd[i].worked_on, format: :short) %>月
                      </td>
                      <td>
                        <div class = "form-group">
                          <%= f.select :manager_approval_instructor_confirmation, options_for_select(Attendance.instructor_confirmations), {include_blank: true, :include_hidden => false , :selected => 1 }, { class: "form-control", :multiple => true} %>
                        </div>
                      </td>
                      <td>
                        <div class = "form-check ">
                          <%= f.check_box :manager_approval_change_approval, {:multiple => true, class: "form-check-input"}, checked_value = "true", unchecked_value = "false" %>
                        </div>
                      </td>
                      <td>
                        <%= f.submit "確認", :name => "#{@attendancesd[i].id}", class: "btn btn-primary btn-one-month-confirmation" %>
                      </td>
                    </tr>
                <!-- end -->    
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
      <div class="center">
        <%= f.submit "変更を送信する", class: "btn btn-primary btn-lg btn-overtime_approval" %>
      </div>    
    <% end %>
  </div>
</div>
