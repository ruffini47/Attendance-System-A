<% provide(:title, "cofirm_one_month_approval") %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
      　<%= l(@first_day, format: :middle) %>時間管理表
      </td>
      <td class="work-time">指定勤務開始時間　<%= format_basic_info(@user.designated_work_start_time) %><br>
                            指定勤務終了時間　<%= format_basic_info(@user.designated_work_end_time) %></td>
      <td class="basic-time" colspan="3">基本時間　<%= format_basic_info(@user.basic_work_time) %></td>
      <td class="first-day">初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td><%= @user.uid %></td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class="table table-bordered table-striped table-condensed table-hover" style="table-layout:fixed" id="table-attendances">
    <thead>
      <colgroup>
        <col style='width:30px;'>
        <col style='width:20px;'>
        <col style='width:20px;'>
        <col style='width:10px;'>
        <col style='width:10px;'>
        <col style='width:20px;'>
        <col style='width:10px;'>
        <col style='width:10px;'>
        <col style='width:5px;'>
        <col style='width:25px;'>
        <col style='width:15px;'>
        <col style='width:20px;'>
        <col style='width:20px;'>
        <col style='width:40px;'>
        <col style='width:45px;'>
        <col style='width:50px;'>
      </colgroup>
      <tr>
        <th rowspan="3" class="bottom">残業申請</th>
        <th rowspan="3" class="bottom">日付</th>
        <th rowspan="3" class="bottom">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2" class="bottom">在社時間</th>
        <th rowspan="2" class="bottom">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2" class="bottom">時間外時間</th>
        <th rowspan="2" class="bottom">業務処理内容</th>
        <th rowspan="2" class="bottom">指示者確認〇</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <% if day.worked_on.wday == 0 %>
            <td class="sun"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <% elsif day.worked_on.wday == 6 %>
            <td class="sat"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <% else %>
            <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <% end %>
          <td>
            <% if day.cr_after_change_start_time.present? %>
              <%= day.cr_after_change_start_time.hour.to_s.rjust(2,'0') %>
            <% elsif day.started_at.present? %>
              <%= day.started_at.hour.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td>
            <% if day.cr_after_change_start_time.present? %>
              <%= day.cr_after_change_start_time.min.to_s.rjust(2,'0') %>
            <% elsif day.started_at.present? %>
              <%= day.started_at.min.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td></td>
          <td>
            <% if day.cr_after_change_end_time.present? %>
              <%= day.cr_after_change_end_time.hour.to_s.rjust(2,'0') %>
            <% elsif day.finished_at.present? %>
              <%= day.finished_at.hour.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td>
            <% if day.cr_after_change_end_time.present? %>
              <%= day.cr_after_change_end_time.min.to_s.rjust(2,'0') %>
            <% elsif day.finished_at.present? %>
              <%= day.finished_at.min.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td></td>
          <td>
            <% if day.cr_after_change_start_time.present?.present? && day.cr_after_change_end_time.present? %>
              <%= str_times = working_times(day.cr_after_change_start_time, day.cr_after_change_end_time, day.tomorrow) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% elsif day.started_at.present?.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at, day.tomorrow) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td>
            <% if day.cr_attendance_change_note.present? %>
              <%= day.cr_attendance_change_note %>
            <% elsif day.last_attendance_change_note.present? %>
              <%= day.last_attendance_change_note %>
            <% end %>
          </td>
          <td>
            <% if day.scheduled_end_time.present? %>
              <%= day.scheduled_end_time.hour.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td>
            <% if day.scheduled_end_time.present? %>
              <%= day.scheduled_end_time.min.to_s.rjust(2, '0') %>
            <% end %>
          </td>
          <td>
            <% if @user.designated_work_end_time.present? && day.scheduled_end_time.present? %>
              <%= working_times(@user.designated_work_end_time, day.scheduled_end_time, day.tomorrow) %>
            <% end %>
          </td>
          <td>
            <% if day.business_processing.present? %>
              <%= day.business_processing %>
            <% end %>
          </td>
          <td><%= day.result %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <!--rowspan:縦結合、colspan:横結合-->
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6" class="total_working_times"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="6"></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>

<div class="center">
    <%= link_to "戻る", attendances_cancel_attendance_change_confirm_one_month_path(@user.id, date: @first_day), class: "btn btn-lg btn-primary" %>
</div>