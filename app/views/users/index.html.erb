<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<%= form_with url: import_users_path, multipart: true, local: true do |f| %>
  <%= f.file_field :file, class: "file_field" %>
  <%= f.submit "CSVをインポート" ,class: "btn btn-primary csv-button", formtarget: "_blank" %>
<% end %>

<%= will_paginate %>
  <p>Example</p>
  <% @users.each do |user| %>
    <div class= "user-name">  
      <%= user.name %>
    </div>
    <div>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "削除", user, method: :delete,
              data: { confirm: "「#{user.name}」を削除してよろしいですか？" }, class: "btn btn-primary button-delete" %>
      <% end %>
    </div>
    <div class= "div-button-edit"> 
      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <!--<h4 class="panel-title">-->
              <a class="btn btn-primary btn-lg button-edit" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= user.id %>">編集</a>
            <!--</h4>-->
          </div>
          <div id="collapse<%= user.id %>" class="panel-collapse collapse">
		        <div class = "panel-content">
              <label>名前</label>
              <div class="well well-sm">
                <%= user.name %>
              </div>
              <label>メールアドレス</label>
              <div class="well well-sm">
                <%= user.email %>
              </div>
              <label>所属</label>
              <div class="well well-sm">
                <%= user.affiliation %>
              </div>
              <label>社員番号</label>
              <div class="well well-sm">
                <%= user.employee_number %>
              </div>
              <label>カードID</label>
              <div class="well well-sm">
                <%= user.uid %>
              </div>
              <label>パスワード</label>
              <div class="well well-sm">
                <%= user.password %>
              </div>
              <label>基本勤務時間</label>
              <div class="well well-sm">
                <%= user.basic_work_time.to_s(:published_on) %>
              </div>
              <label>指定勤務開始時間</label>
              <div class="well well-sm">
                <%= user.designated_work_start_time.to_s(:published_on) %>
              </div>
              <label>指定勤務終了時間</label>
              <div class="well well-sm">
                <%= user.designated_work_end_time.to_s(:published_on) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%= will_paginate %>  
